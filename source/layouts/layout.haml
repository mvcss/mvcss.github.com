!!! 5
%html(lang="en")
  %head
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= (title = data.page.title) ? "#{title} / MVCSS" : 'MVCSS'
    %meta(name="description" content="MVCSS - A Sass-based CSS architecture for creating predictable and maintainable application style.")

    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Roboto+Slab:400,700,300'
    = stylesheet_link_tag 'application'

    = partial 'shared/google_analytics' if build?

  %body{ class: page_classes }

    .l-controls
      %a.btn--a(href='https://github.com/mvcss/mvcss') View Code &rarr;
      %p= link_to 'Changelog (v3.0.1)', '/changelog/'

    %a.l-sidebar-toggle(href="#") Navigation
    %aside.l-sidebar
      = partial 'shared/header'
      = partial 'shared/nav'

      %footer.l-about
        %b Crafted with care by
        = link_to 'Nick Walsh', 'http://twitter.com/nickawalsh'
        &amp;
        = link_to 'Drew Barontini', 'http://twitter.com/drewbarontini'

    %main.l-cell
      = find_and_preserve do
        = yield

    = partial 'shared/gauges' if build?

    = javascript_include_tag '//code.jquery.com/jquery-1.9.1.min.js'
    :coffeescript
      $ ->
        $('.l-sidebar-toggle').on 'click', (e) ->
          e.preventDefault()
          $(@).toggleClass('is-active')
          $('body').toggleClass('is-sidebar-toggled')
